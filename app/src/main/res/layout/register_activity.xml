<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="70dp"
        android:autoStart="true"
        android:baselineAligned="false"
        android:flipInterval="3200"
        android:inAnimation="@android:anim/slide_in_left"
        android:outAnimation="@android:anim/slide_out_right">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Explora un universo de dulzura en línea"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="360dp"
                android:layout_height="260dp"
                app:srcCompat="@drawable/img" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Carga tus bolsas con los mejores productos"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="360dp"
                android:layout_height="260dp"
                app:srcCompat="@drawable/img_1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Deslumbra con una piel hermosa con un clic"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="360dp"
                android:layout_height="260dp"
                app:srcCompat="@drawable/img_2" />

        </LinearLayout>

    </ViewFlipper>


    <!-- Email Input -->
    <EditText
        android:layout_width="283dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:background="@drawable/text"
        android:drawableLeft="@drawable/img_3"
        android:drawablePadding="8dp"
        android:inputType="textEmailAddress"/>

    <!-- Password Input -->
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="283dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        app:passwordToggleEnabled="true"
        android:drawablePadding="8dp"
        android:background="@drawable/text"
        android:drawableLeft="@drawable/img_4"
        android:inputType="textPassword"/>





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Olvidaste tu contraseña?"
        android:textStyle="italic|bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="155dp"
        android:textColor="@color/black"
        android:textSize="16sp"/>



    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="53dp"
        android:text="Mantenerme conectado"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:background="@drawable/checkbox_bg_selector"
        android:buttonTint="@color/checkbox_btn_selector"/>




    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCrear"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:textColor="@color/white"
        android:layout_marginTop="38dp"
        android:backgroundTint="@color/black"
        app:cornerRadius="30dp"
        android:text="Crear Cuenta"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/img_6"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/white"
        app:cornerRadius="30dp"
        android:paddingLeft="30dp"
        android:textSize="18dp"
        android:text="Iniciar Sesión"
        android:layout_gravity="center_horizontal" />


</LinearLayout>