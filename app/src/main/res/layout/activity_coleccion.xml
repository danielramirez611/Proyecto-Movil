<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComprarActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/degradado"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@id/frame_container"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/arrowIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/arrow"
            android:layout_marginTop="44dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="95dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/arrowIcon" />
        <TextView
            android:id="@+id/textcomp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Colecciones"
            android:textColor="@color/black"
            android:layout_marginTop="-40dp"
            android:layout_marginLeft="100dp"
            android:textStyle="bold"
            android:textSize="35dp"
            app:layout_constraintTop_toTopOf="@id/arrowIcon"
            app:layout_constraintStart_toEndOf="@id/arrowIcon" />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/barsearch"
            android:layout_width="360dp"
            android:layout_height="46dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:paddingLeft="10dp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/search"
            android:background="@drawable/buscador"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textcomp" />
        <!-- CardView -->

        <!-- Contenedor de los CardViews -->
        <LinearLayout
            android:id="@+id/cardViewsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:clipChildren="false"
            app:layout_constraintTop_toBottomOf="@id/barsearch">

            <!-- Primer CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                android:layout_margin="8dp">

                <!-- Contenido del Primer CardView -->
                <ImageView
                    android:id="@+id/imageInsideCard1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <!-- Segundo CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                android:layout_margin="8dp">

                <!-- Contenido del Segundo CardView -->
                <ImageView
                    android:id="@+id/imageInsideCard2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <!-- Contenedor de los CardViews -->
        <LinearLayout
            android:id="@+id/cardViewsContainer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:clipChildren="false"
            app:layout_constraintTop_toBottomOf="@id/cardViewsContainer">

            <!-- Primer CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                android:layout_margin="8dp">

                <!-- Contenido del Primer CardView -->
                <ImageView
                    android:id="@+id/imageInsideCard3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <!-- Segundo CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                android:layout_margin="8dp">

                <!-- Contenido del Segundo CardView -->
                <ImageView
                    android:id="@+id/imageInsideCard4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/rectangleContainer"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/degradado2"
            android:gravity="center"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/cardViewsContainer2">

            <!-- Texto en el centro del rectángulo -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Rectángulo rojo para la oferta -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_rectangle"
                    android:layout_marginRight="-50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    app:layout_constraintRight_toRightOf="@+id/rectangleContainer"
                    app:layout_constraintTop_toTopOf="@+id/rectangleContainer">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Novedades"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:padding="4dp" />
                </LinearLayout>
                <!-- Texto -->
                <TextView
                    android:id="@+id/textInsideRectangle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Lorem ifafsasafasfsdfdsfsdfdsfdsfdsfdsfsdfsdfsdfsdfsfsdffsdfdsfdsfdsfdsfdsfdsfdsfsdfdlnfnnfknnfnofwnnwfnodjfdafdfsdfsddddddddddddddddddddddddddddddddddddddpsum"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="60dp"
                    android:textSize="12sp"
                    android:layout_marginLeft="-18dp"
                    android:layout_weight="1" />

                <!-- Imagen -->
                <ImageView
                    android:id="@+id/imageRightRectangle"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/img_11"
                    android:layout_marginTop="0dp"
                    app:layout_constraintStart_toEndOf="@id/textInsideRectangle"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Contenedor de fragmentos -->
    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintTop_toBottomOf="@id/main">

        <!-- Aquí se cargarán los fragmentos -->

    </FrameLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/background_rounded_corners"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:labelVisibilityMode="selected"
        app:menu="@menu/bottom_navigation"
        style="@style/Widget.MaterialComponents.BottomNavigationView.Colored"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>